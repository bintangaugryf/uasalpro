public class SoalUAS4 {
    public static void main(String[] args) {
        int n = 5;
        for(int i=0; i<n; i++) {
            for(int j=0; j<n; j++) {
                if(j<n-i-1) {
                    System.out.print("  ");
                } else {
                    System.out.print(j - (n-i-2) + " ");
                }
            }
            System.out.println();
        }
    }
}
